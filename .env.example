# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string

# JWT Authentication Configuration
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production

# CORS Configuration (optional)
# CORS is automatically configured to allow:
# - All localhost ports (for development)
# - All *.vercel.app domains (for Vercel preview & production)
# Only set CORS_ORIGIN if you need to allow a custom domain
# CORS_ORIGIN=https://your-custom-domain.com

# Server Configuration (local development only)
PORT=3001
